<Window x:Class="ProgrammingLanguage.Client.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammingLanguage.Client"
        xmlns:inf="clr-namespace:ProgrammingLanguage.Client.Infrastructure.Constants;assembly=ProgrammingLanguage.Client.Infrastructure"
        xmlns:regions="http://prismlibrary.com/"
        mc:Ignorable="d"
        Style="{DynamicResource Style_Window_DialogWithMinimaze}"
        Title="MainWindow" Height="Auto" Width="Auto"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <ContentControl x:Name="cc_MainRegion"
                        regions:RegionManager.RegionName="{x:Static inf:RegionNamesConstants.MainRegion}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
    </Grid>
    
</Window>
