<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Style_TextBlock_Base" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>
    
    <Style x:Key="Style_TextBlock_TitleDialog" TargetType="TextBlock" BasedOn="{StaticResource Style_TextBlock_Base}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="40 16 0 0"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryUltraLightBrush}"/>
    </Style>
</ResourceDictionary>